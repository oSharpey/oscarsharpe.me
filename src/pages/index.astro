---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/utils";

const MAX_POSTS = 5;
const allPosts = await getCollection("post");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

/*
const dob = new Date("12/29/2003");
const monthDiff = Date.now() - dob.getTime();
const ageDiff = new Date(monthDiff);
const year = ageDiff.getUTCFullYear();
const age = Math.abs(year - 1970);
*/
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello World!</h1>
		<p class="mb-4">
			Hi I'm Oscar, a 
			<script type="text/javascript">
				const dob = new Date("12/29/2003");
				const monthDiff = Date.now() - dob.getTime();
				const ageDiff = new Date(monthDiff);
				const year = ageDiff.getUTCFullYear();
				const age = Math.abs(year - 1970);
				document.write(age)
			</script>
			year old uni student from Southampton based in Coventry. I'm currently studying BSc Cyber Security at
			the University of Wariwck. 
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl"> Recent Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Tech Used in the Site</h2>
		<ul class="space-y-4 sm:space-y-2">
			<li>
				<a
					href="https://astro.build"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>Astro
				</a>:
				<p class="inline-block sm:mt-2">Build fast websites, faster.</p>
			</li>
			<li>
				<a
					href="https://docs.astro.build/en/guides/integrations-guide/image/"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>@astro/image
				</a>:
				<p class="inline-block sm:mt-2">
					An Astro integration for optimising images in Astro projects.
				</p>
			</li>
			<li>
				<a
					href="https://tailwindcss.com"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>Tailwind CSS
				</a>:
				<p class="inline-block sm:mt-2">
					Rapidly build modern websites without ever leaving your HTML.
				</p>
			</li>
			<li>
				<a
					href="https://mdxjs.com/"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>MDX
				</a>:
				<p class="inline-block sm:mt-2">Markdown for the component era.</p>
			</li>
			<li>
				<a
					href="https://github.com/chrismwilliams/astro-theme-cactus"
					target="_blank"
					rel="noopener noreferrer"
					class="cactus-link inline-block"
					>Astro Cactus Theme
				</a>:
				<p class="inline-block sm:mt-2">Simple starter built with the Astro framework.</p>
			</li>
		</ul>
	</section>
</PageLayout>
